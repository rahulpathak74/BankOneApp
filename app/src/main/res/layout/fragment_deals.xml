<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:paddingBottom="70dp"
    tools:context=".ui.main.view.fragments.deals.DealsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/part_one"
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:layout_marginTop="25dp"
                android:importantForAccessibility="yes"
                android:contentDescription="Deals Available on various popular brands"
                android:scaleX="1"
                android:src="@drawable/deals_page_one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/part_two"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:contentDescription="Deals Available on various brands"
                android:scaleX="1.1"
                android:importantForAccessibility="yes"
                android:src="@drawable/delas_page_two"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/part_one" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>